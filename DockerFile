# Use a .NET 8.0 base image instead of 7.0
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app

# Use .NET 8.0 SDK for building the application
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy the project files
COPY ["SmartParkingSystem/SmartParkingSystem.csproj", "SmartParkingSystem/"]

# Restore dependencies with explicit package directory
RUN dotnet restore "SmartParkingSystem/SmartParkingSystem.csproj" --packages /root/.nuget/packages --ignore-failed-sources

# Copy and build the project
COPY . .
WORKDIR "/src/SmartParkingSystem"
RUN dotnet build --no-restore -c Release -o /app/build

# Publish the application
FROM build AS publish
RUN dotnet publish --no-build -c Release -o /app/publish

# Final runtime image
FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "SmartParkingSystem.dll"]
