# Use the official .NET SDK image for building the project
FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build
WORKDIR /src

# Copy the project file first to optimize caching
COPY SmartParkingSystem/SmartParkingSystem.csproj SmartParkingSystem/
WORKDIR /src/SmartParkingSystem

# Restore dependencies
RUN dotnet run

# Copy the remaining source code and build the project
COPY . .
RUN dotnet publish -c Release -o /app --no-restore

# Use a lightweight .NET runtime image for deployment
FROM mcr.microsoft.com/dotnet/aspnet:7.0 AS runtime
WORKDIR /app

# Copy the published output from the build stage
COPY --from=build /app .

# Expose the port your app runs on (change if needed)
EXPOSE 7040

# Start the application
CMD ["dotnet", "SmartParkingSystem.dll"]
